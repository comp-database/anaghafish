<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">

    <!-- Parent LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- FrameLayout with ImageView and Vendor TextView -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <ImageView
                android:id="@+id/fishImageView1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/fooddish1"
                android:layout_marginTop="29dp"
                android:scaleType="centerCrop" />

            <!-- Vendor Name TextView -->
            <TextView
                android:id="@+id/vendorNameTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendor Name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_gravity="top" />

        </FrameLayout>

        <!-- LinearLayout with Fish Name, Fish Price, and Add to Cart Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <!-- Fish Name TextView -->
            <TextView
                android:id="@+id/fishNameTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fish Name"
                android:textSize="25sp"

                android:textStyle="bold" />

            <!-- Fish Price TextView -->
            <TextView
                android:id="@+id/fishPriceTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.00rs"
                android:textSize="20sp" />

            <!-- Add to Cart Button
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:backgroundTint="@color/skyblue"
                android:text="Add to cart" />-->

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
